<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment1"
    android:padding="25dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioGroup
            android:id="@+id/frag1_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/frag1_radioBtn1"
                android:checked="true"
                android:text="내용"
                android:background="@drawable/selector_radio_button"
                android:textColor="@drawable/selector_radio_text"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/frag1_radioBtn2"
                android:checked="false"
                android:text="사진"
                android:background="@drawable/selector_radio_button"
                android:textAlignment="center"
                android:textColor="@drawable/selector_radio_text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"/>
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/frag1_editDiaryBtn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frag1_edit_diary_btn"
            android:drawableLeft="@drawable/icons8_news_16"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:paddingHorizontal="15dp"
            android:text="일기 작성"></androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frag1_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"/>




</LinearLayout>